<div class="post card">
  <div class="card-header">
    <h2>Edit Post: </h2>
  </div>
  <form id="edit-post-form" class="card-body">
    <input type="hidden" name="post-id" value="{{post.id}}" />

    <label class="form-lable" for="post-title">Title</label>
    <input
      type="text"
      name="post-title"
      value="{{post.title}}"
      class="form-input"
    />

    <label class="form-lable" for="post-body">Content</label>
    <textarea name="post-body" class="form-input">{{post.content}}</textarea>

    <button type="button" class="btn" id="edit-post-btn">Update</button>

    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>

<script src="/js/edit.js"></script>